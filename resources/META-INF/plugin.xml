<idea-plugin version="2">
	<id>org.mustbe.consulo.metrics</id>
	<name>MetricsReloaded</name>
	<vendor>Bas Leijdekkers (Basleijdekkers@gmail.com)</vendor>
	<version>SNAPSHOT</version>
	<depends config-file="java.xml" optional="true">org.consulo.java</depends>
	<depends config-file="xml.xml" optional="true">com.intellij.xml</depends>

	<extensionPoints>
		<extensionPoint name="metricProvider" interface="com.sixrr.metrics.MetricProvider"/>
		<extensionPoint name="metric" interface="com.sixrr.metrics.Metric"/>

		<extensionPoint name="lineOfCodeFileTypeProvider" beanClass="com.sixrr.metrics.impl.defaultMetricsProvider.LineOfCodeFileTypeProviderEP"/>
	</extensionPoints>

	<extensions defaultExtensionNs="org.mustbe.consulo.metrics">
		<metricProvider implementation="com.sixrr.metrics.impl.defaultMetricsProvider.DefaultMetricProvider" />
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<appStarter implementation="com.sixrr.metrics.offline.MetricsCommandLine"/>

		<applicationService serviceImplementation="com.sixrr.metrics.profile.instanceHolder.MetricInstanceHolder" />
	</extensions>

	<application-components>
		<component>
			<interface-class>com.sixrr.metrics.plugin.MetricsPluginApplication</interface-class>
			<implementation-class>com.sixrr.metrics.plugin.MetricsPluginApplicationImpl</implementation-class>
		</component>
	</application-components>

	<project-components>
		<component>
			<interface-class>com.sixrr.metrics.plugin.MetricsPlugin</interface-class>
			<implementation-class>com.sixrr.metrics.plugin.MetricsPluginImpl</implementation-class>
			<skipForDefaultProject/>
			<option name="workspace" value="true"/>
		</component>
	</project-components>

	<actions>
		<group>
			<action id="Metrics.ProjectMetricsAction" class="com.sixrr.metrics.plugin.ProjectMetricsAction"
					text="Calculate Metrics..."/>
			<!--action id="Metrics.ViewOfflineMetricsResults"
					  class="com.sixrr.metrics.offline.ViewOfflineMetricsResultsAction"
					  text="View Offline Metrics Results...">
			  </action-->
			<add-to-group group-id="InspectCodeGroup" anchor="last"/>
		</group>
	</actions>
</idea-plugin>
